@model ServiceWebApp.Models.Model

@{
                /**/

                ViewBag.Title = "Config";
}
@using ServiceWebApp.Controllers;

<header title="Configuration" class="title">Configurations</header>

<body class="tabcontent">
    @{
        var outputDir = (string)ViewData["outputDir"];
    }
    <p>@outputDir</p>
    @{
        var source = (string)ViewData["source"];
    }
    <p>@source</p>
    @{
        var logName = (string)ViewData["logName"];
    }
    <p>@logName</p>
    @{
        var ThumbName = (string)ViewData["ThumbName"];
    }
    <p>@ThumbName</p>
    @{
        var ListPaths = (List<string>)ViewData["ListPaths"];
    }
    <p>List of Handlers:</p>
    @foreach (var x in ListPaths)
    {
        <li class="handler">

            <a href="#">@Html.ActionLink(@x, "RemoveHandlerOther", new { path = x })</a>


        </li>
    }

</body>

<style>
    .modal-content {
        color: #001198;
        background-color: #88c8ed;
        font-family: 'Courier New'
    }

    .ok {
        background-color: white;
        color: #001198;
        font-family: 'Courier New';
        font-size: 10pt;
    }

    .btn {
        color: #001198;
        font-family: 'Courier New'
    }

    .modal-title {
        color: #001198;
        font-family: 'Courier New'
    }

    .handler {
        padding: 20px 20px;
    }

    .title {
        color: #a5dded;
        font-size: 40px;
        background-color: black;
        font-family: 'Courier New';
        font-weight: bold;
        padding: 30px 0px 0px 0px;
    }

    .tabcontent {
        color: #a5dded;
        font-size: 25px;
        background-color: black;
        font-family: 'Courier New';
    }
</style>

<script>

    function disable() {
        document.getElementById("cancel").disabled = true;
        document.getElementById("mylink").disabled = true;
        return false;
    }

    $('.btn').click(function () {
        document.getElementById("cancel").disabled = true;
        document.getElementById("ok").disabled = true;

    })
    function removeHandler(path) {

        $.ajax({ url: 'RemoveHandler', data: { path: path } }).done(function () { alert('Added'); });
    }
</script>