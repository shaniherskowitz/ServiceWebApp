@model ServiceWebApp.Models.Model

@{
     /**/

    ViewBag.Title = "Images";
}

@using ServiceWebApp.Controllers;
<header title="Images" class="title">Images:</header>
<!DOCTYPE html>

<html lang="en">
@using System.Drawing;
<head>
    <title>Bootstrap Example</title>


</head>

<body class="tabcontent">
    @{
        var ImageList = (List<ImageInfo>)ViewData["ImageList"];
    }
    @foreach (var x in ImageList)
    {
        <div class="col-xs-18 col-sm-6 col-md-3">
            <div class="thumbnail">


                <img src="@Url.Content(x.Path)" class="img-circle"/>

                <div class="caption">
                    <h4>@x.image</h4>
                    <p></p>
                    <p><a href="@Url.Content(x.Path)" class="btn btn-info btn-xs" role="button">View</a> <a href="#">@Html.ActionLink("Delete", "Images", new { path = x }, new { @class = "btn btn-info btn-xs" })</a></p>
                </div>
            </div>
        </div>}

</body>
</html>


<style>
    .tabcontent {
        color: #a5dded;
        font-size: 25px;
        background-color: black;
        font-family: 'Courier New';
    }

    .thumbnail {
        position: relative;
        padding: 0px;
        margin-bottom: 20px;
        font-size: 10px;
    }

        .thumbnail img {
            width: 100%;
        }

    .title {
        color: #a5dded;
        font-size: 40px;
        background-color: black;
        font-family: 'Courier New';
        font-weight: bold;
        padding: 30px 0px 0px 0px;
    }
</style>
